#version 450

layout(binding = 0) uniform sampler2D spectrum;

layout(location = 0) out vec4 outColor;

void main() {
    // Map the fragment coordinates (ranging from -1 to 1) to texture coordinates (ranging from 0 to 1)
    vec2 texCoord = gl_FragCoord.xy / vec2(2.0) + vec2(0.5);
    float magnitude = texture(spectrum, texCoord).r;
    outColor = vec4(magnitude, magnitude, magnitude, 1.0);
}
